# =============================================================================
# Zcash Explorer Configuration
# =============================================================================
# Copy to .env and fill in the secrets

# -----------------------------------------------------------------------------
# Shared Configuration
# -----------------------------------------------------------------------------

# Zebra JSON-RPC (host.docker.internal reaches host from container)
ZCASHD_HOSTNAME=host.docker.internal
ZCASHD_USERNAME=zcashrpc
ZCASHD_PASSWORD=changeme

# Lightwalletd gRPC
LIGHTWALLETD_ENABLED=true
LIGHTWALLETD_HOSTNAME=host.docker.internal
LIGHTWALLETD_TLS=false

# Phoenix
EXPLORER_SCHEME=https

# Viewing Key feature
VK_CPUS=0.3
VK_MEM=1024M
VK_RUNNER_IMAGE=nighthawkapps/vkrunner

# -----------------------------------------------------------------------------
# Mainnet Configuration
# -----------------------------------------------------------------------------
# Generate with: mix phx.gen.secret
MAINNET_SECRET_KEY_BASE=<generate-secret-here>
MAINNET_EXPLORER_HOSTNAME=explorer.zec.pro

# -----------------------------------------------------------------------------
# Testnet Configuration
# -----------------------------------------------------------------------------
# Generate with: mix phx.gen.secret
TESTNET_SECRET_KEY_BASE=<generate-secret-here>
TESTNET_EXPLORER_HOSTNAME=explorer.testnet.zec.pro
